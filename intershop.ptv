



#-----------------------------------------------------------------------------------------------------------
app/name                    text            intershop

#-----------------------------------------------------------------------------------------------------------
db/port                     integer         5433
db/name                     text            intershop
db/user                     text            intershop

#-----------------------------------------------------------------------------------------------------------
rpc/port                    integer         23001
rpc/host                    text            127.0.0.1

#-----------------------------------------------------------------------------------------------------------
respawn/command             json            [ "lib/intershop-rpc-server-secondary.js" ]
# set monitor name
respawn/name                text            intershop-rpc-server
# set env vars
respawn/env                 json            { "key": "value" }
# set cwd
respawn/cwd                 text            .
# how many restarts are allowed within 60s or -1 for infinite restarts
respawn/maxRestarts         integer         6
# time to sleep between restarts
respawn/sleep               unit            1 s
# wait 30s before force killing after stopping
respawn/kill                unit            30 s
# fork instead of spawn
respawn/fork                boolean         true




